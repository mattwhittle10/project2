<div class="container">
    <h2>Your Postings</h2>
    <div class="container">
        <div class="row">
            {{#each listings}}
            {{#if available}}
            <div class="card viewListingsCards wrapper" style="width: 18rem;">
                <img class="card-img-top" src="{{this.img_url}}" alt="Property Image">
                <div class="card-body">
                    <h5 class="card-title">{{this.title}}</h5>
                    <p class="card-text">Price: ${{this.price}}/month</p>
                    <p class="card-text">Category: {{this.category}}</p>
                    <p class="card-text">Location: {{this.city}}, {{this.state}}</p>
                    <div class="text-center" style="item-align:center"><a href='/api/{{this.product_id}}'
                            class='btn btn-primary userlisting' id='{{this.product_id}}'>Update</a></div>
                </div>
            </div>
            {{/if}}
            {{/each}}
        </div>
    </div>
</div>
