<div class="container">
    <h2>Update Profile</h2>
    <form>
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" class="form-control" aria-describedby="" placeholder='{{user.email_address}}'>
        </div>
        <div class="form-group">
            <label for="phone">Phone Number</label>
            <input type="phone" class="form-control" aria-describedby="" placeholder='{{user.phone_number}}'>
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>

</div>