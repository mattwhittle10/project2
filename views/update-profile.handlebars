<div class="container">
    <div class="row">
        <div class="col-sm-4" style="padding-top: 30px" id="userprofilepic-large">
            <img src="{{user.thumbnail}}" class="img-thumbnail">
        </div>
        <div class="col-sm-8" style="padding-top: 30px">
            <h2>Update Profile</h2>
            <form class="needs-validation" novalidate>
                <div class="form-group">
                    <label for="username">Username</label>
                    <input id="username" type="username" class="form-control" aria-describedby=""
                        placeholder='{{user.username}}'>
                </div>
                <div class="form-group">
                    <label for="firstname">First Name</label>
                    <input id="firstname" type="firstname" class="form-control" aria-describedby=""
                        placeholder='{{user.first_name}}'>
                </div>
                <div class="form-group">
                    <label for="lastname">Last Name</label>
                    <input id="lastname" type="lastname" class="form-control" aria-describedby=""
                        placeholder='{{user.last_name}}'>
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input id="email" type="email" class="form-control" aria-describedby=""
                        placeholder='{{user.email_address}}'>
                </div>
                <div class="form-group">
                    <label for="phone">Phone Number</label>
                    <input id="phone" type="phone" class="form-control" aria-describedby=""
                        placeholder='{{user.phone_number}}'>
                </div>

                <div class ="text-center" style="item-align:center"><button type="submit" class="btn btn-primary profile-update" id="{{user.customer_id}}">Update</button></div>
            </form>
        </div>
    </div>
</div>




